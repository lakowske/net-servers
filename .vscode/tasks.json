        {
            "label": "Run Tests with Coverage",
            "type": "shell",
            "command": "pytest",
            "args": [
                "--cov=.",
                "--cov-report=term-missing",
                "--cov-fail-under=80",
                "--cov-report=html"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
